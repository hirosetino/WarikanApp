<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>

    <div class="session-container">
        <div class="session-top">
            <h1><%= I18n.t('devise.sessions.new.Account') %></h1>
        </div>

        <div class="form-group">
            <div class='form-text-wrap'>
                <label class="form-text"><%= I18n.t('devise.sessions.new.email') %></label>
            </div>
            <%= f.email_field :email, class:"input-default", id:"email" %>
        </div>
        <div class="form-group">
            <div class='form-text-wrap'>
                <label class="form-text">password</label>
            </div>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6 or more alphanumeric characters" %>
            <p class='info-text'>â€»Please include both letters and numbers</p>
        </div>
        <div class="form-group">
            <div class='form-text-wrap'>
                <label class="form-text">confirmation password</label>
            </div>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"Reenter password" %>
        </div>

        <div class='account-login'>
            <%= f.submit "login" , class:"account-login-btn" %>
        </div>

        <div class="sign-up-link">
            <p class="sign-up-link-text">don't have an account <%= link_to "signup", new_user_registration_path, class: "sign-up" %></p>
        </div>
    </div>

<% end %>